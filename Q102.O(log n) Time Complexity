#include <stdio.h>

int findCeil(int arr[], int n, int x) {
    int low = 0, high = n - 1;
    int ans = -1;

    while (low <= high) {
        int mid = (low + high) / 2;

        if (arr[mid] >= x) {
            ans = mid;        // possible ceil
            high = mid - 1;   // try to find a smaller one on left
        }
        else {
            low = mid + 1;    // go right
        }
    }

    return ans;
}

int main() {
    int arr[100], n, x, i;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter sorted array:\n");
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    printf("Enter x: ");
    scanf("%d", &x);

    int idx = findCeil(arr, n, x);

    printf("Ceil index = %d\n", idx);

    return 0;
}
